#compdef claude-yolo

# Completion for claude-yolo (sandboxed Claude Code)
# This provides the same completions as the regular claude command

# Get claude completions and pass them through
# Since claude-yolo is a wrapper around claude, we delegate to claude's completion
_arguments \
  '*::args:->args' && return 0

case $state in
  args)
    # Try to use claude's own completion if available
    if command -v claude &>/dev/null; then
      # Delegate to claude completion by simulating claude command
      words[1]=claude
      _command_names -e || _files
    else
      # Fallback to file completion
      _files
    fi
    ;;
esac
